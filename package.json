{
  "name": "amethyst",
  "version": "1.0.0",
  "repository": "git@github.com:jayarnielsen/amethyst.git",
  "author": "Jay Nielsen <jay@jayarnielsen.com>",
  "homepage": "https://github.com/jayarnielsen/amethyst",
  "license": "MIT",
  "scripts": {
    "serve": "bundle exec jekyll serve --drafts --incremental",
    "watch": "webpack --hide-modules --watch --config webpack.config.js",
    "start": "concurrently --kill-others --names 'JKYL,WBPK' -c 'red,blue' 'yarn serve' 'yarn watch'",
    "build": "webpack --progress -p --config webpack.config.js && JEKYLL_ENV=production bundle exec jekyll build",
    "deploy": "yarn build && git-directory-deploy --directory dist --branch gh-pages",
    "lint:js": "eslint src/_assets/js",
    "lint:css": "stylelint src/_assets/css/**/*.{css,sass,scss,sss,less}",
    "lint": "yarn lint:js && yarn lint:css"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "browser-sync": "^2.23.5",
    "browsersync-webpack-plugin": "^0.6.0",
    "bs-html-injector": "^3.0.3",
    "buble-loader": "^0.4.1",
    "cache-loader": "^1.2.0",
    "clean-webpack-plugin": "^0.1.16",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.9",
    "cssnano": "^3.10.0",
    "eslint": "^4.16.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.6",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "git-directory-deploy": "^1.5.1",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-webpack-plugin": "^1.6.1",
    "js-yaml": "^3.10.0",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.0.10",
    "postcss-safe-parser": "^3.0.1",
    "resolve-url-loader": "^2.2.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-webpack-plugin": "^0.10.1",
    "url-join": "^3.0.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.0",
    "yargs": "^10.1.1"
  },
  "dependencies": {
    "foundation-sites": "^6.4.4-rc1",
    "motion-ui": "^1.2.3"
  }
}
